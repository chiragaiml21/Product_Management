<h1>Edit Product</h1>

<form action="/product/{{ id }}/edit" method="POST">
    <label for="name">Product Name:</label><br>
    <input type="text" id="name" name="name" value="{{ product.name }}"><br>
    <label for="imageUrl">Image URL:</label><br>
    <input type="text" id="imageUrl" name="imageUrl" value="{{ product.imageUrl }}"><br>
    <label for="price">Price:</label><br>
    <input type="text" id="price" name="price" value="{{ product.price }}"><br><br>
    <button type="submit">Update Product</button>
</form>
